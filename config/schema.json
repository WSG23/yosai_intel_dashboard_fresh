{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "name": {"type": "string"},
        "debug": {"type": "boolean"},
        "host": {"type": "string"},
        "port": {"type": "integer"}
      },
      "required": []
    },
    "database": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "host": {"type": "string"},
        "port": {"type": "integer"},
        "name": {"type": "string"},
        "user": {"type": "string"},
        "password": {"type": "string"},
        "url": {"type": "string"}
      },
      "required": []
    },
    "security": {
      "type": "object",
      "properties": {
        "secret_key": {"type": "string"},
        "max_upload_mb": {"type": "integer"},
        "allowed_file_types": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": []
    }
  },
  "required": ["app", "database", "security"]
}
