{
  "uid": "database",
  "title": "Database Metrics",
  "panels": [
    {
      "type": "graph",
      "title": "Queries Executed",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "database_queries_total", "legendFormat": "queries"}
      ]
    },
    {
      "type": "graph",
      "title": "Query Errors",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "database_query_errors_total", "legendFormat": "errors"}
      ]
    },
    {
      "type": "graph",
      "title": "Query Error Rate",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "rate(database_query_errors_total[5m])", "legendFormat": "errors/sec"}
      ]
    },
    {
      "type": "graph",
      "title": "Pool Utilization",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "database_pool_utilization", "legendFormat": "utilization"}
      ]
    },
    {
      "type": "graph",
      "title": "Health Check Failures",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "database_health_check_failures_total", "legendFormat": "failures"}
      ]
    },
    {
      "type": "graph",
      "title": "Health Check Retries",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "database_health_check_retries_total", "legendFormat": "retries"}
      ]
    }
  ]
}
