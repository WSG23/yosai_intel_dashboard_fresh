# Example production environment configuration for Yosai Intel Dashboard
# Copy this file to `.env` and fill in values for your deployment.

# Required secrets
SECRET_KEY=
DB_PASSWORD=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_DOMAIN=
AUTH0_AUDIENCE=
JWT_SECRET=

# General configuration
YOSAI_ENV=production
FLASK_ENV=production
FLASK_DEBUG=0
YOSAI_CONFIG_FILE=config/config.yaml

# Database connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yosai_db
DB_USER=yosai_user
DB_GATEWAY_NAME=yosai_gateway_db
DB_EVENTS_NAME=yosai_events_db
# Optional JSON array of read replica URLs
YOSAI_DATABASE_READ_REPLICAS=[]

# Frontend configuration
REACT_APP_API_BASE=/v1
REACT_APP_WS_URL=localhost:5001
PERMISSION_SERVICE_URL=http://rbac-service:8081
SERVICE_REGISTRY_URL=http://service-registry:8500

# Asset CDN
ASSET_CDN_URL=
CDN_DISTRIBUTION_ID=

# Cache configuration
# Comma separated list of keys to pre-warm at startup
CACHE_WARM_KEYS=

# Database pool parameters
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20
DB_TIMEOUT=30

# Redis settings
REDIS_URL=redis://localhost:6379/0
SESSION_REDIS_URL=
METRICS_REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security and authentication secrets
SESSION_COOKIE_SECRET=
CSRF_SECRET=
API_ENCRYPTION_KEY=

# Analytics limits
ANALYTICS_CACHE_TIMEOUT=600
ANALYTICS_CHUNK_SIZE=100000
ANALYTICS_BATCH_SIZE=5000
ANALYTICS_MAX_MEMORY_MB=500
ANALYTICS_MAX_WORKERS=4

# Feature flags
FEATURE_FLAG_SOURCE=
FEATURE_FLAG_REDIS_URL=
FEATURE_FLAGS={}

# Monitoring ports
REPLICATION_METRICS_PORT=8004
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=9000

# Development toggles
ENABLE_AUTH=1
ENABLE_RATELIMIT=0
ENABLE_PROFILING=false
ENABLE_REAL_TIME=true

