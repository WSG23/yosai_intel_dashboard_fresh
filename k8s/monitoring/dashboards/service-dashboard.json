{
  "title": "Service Metrics",
  "schemaVersion": 16,
  "timezone": "browser",
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage",
      "targets": [
        {"expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\"}[5m]))"}
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "targets": [
        {"expr": "sum(container_memory_usage_bytes{namespace=\"$namespace\"})"}
      ]
    },
    {
      "type": "graph",
      "title": "p95 Request Latency",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))"},
        {"expr": "0.5"}
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate",
      "targets": [
        {"expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))"},
        {"expr": "0.01"}
      ]
    }
  ]
}
